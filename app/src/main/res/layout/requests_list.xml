<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/request_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textAlignment="center"
                android:textColor="@color/azure"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/request_item_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/request_id"
                android:textAlignment="center"
                android:textColor="@color/azure"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnRejectReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/request_item_name"
                android:text="X"
                android:textColor="@color/design_default_color_error"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/request_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>
        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/request_user_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/request_user_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_toRightOf="@id/request_user_id"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/request_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/request_user_name"
                android:textAlignment="center"
                android:layout_marginTop="4dp"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>