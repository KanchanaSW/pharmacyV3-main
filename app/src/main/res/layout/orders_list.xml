<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/order_id"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textAlignment="center"
                android:textColor="@color/azure"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cus_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/order_id"
                android:textAlignment="center"
                android:textColor="@color/azure"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cus_name"
                android:textAlignment="center"
                android:textColor="@color/azure"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- <TextView
                 android:id="@+id/ibtnToDeleteInquiry"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/inquiry_item_name"
                 android:text="X"
                 android:textColor="@color/design_default_color_error"
                 android:textSize="20sp"
                 android:textStyle="bold" />-->
        </RelativeLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="4dp"/>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/order_date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@id/order_date"
                android:textAlignment="center" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/total"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/pharmacy_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@id/total"
                android:textAlignment="center" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>